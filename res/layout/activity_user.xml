<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/img"
    tools:context=".User" >
    
    <TextView
        android:id="@+id/user_text_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track User"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="track" />
    
    <TextView
	    android:id="@+id/user_text_toggle"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:text="Off"
	    android:gravity="center_vertical" />
   	
    <TextView
        android:id="@+id/user_text_track_space"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/user_text_track" />
    
    <TextView
        android:id="@+id/user_text_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See on Map"
        android:layout_below="@id/user_text_track_space"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="drawMap" />
    
    <TextView
        android:id="@+id/user_text_map_space"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/user_text_map" />
    
    <TextView
        android:id="@+id/user_text_geo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Geofencing radius"
        android:layout_below="@id/user_text_map_space"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="setRadius" />
    
    <TextView
	    android:id="@+id/user_text_geo_radius"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/user_text_map_space"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:gravity="center_vertical" />
    
    <TextView
        android:id="@+id/user_text_geo_space"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/user_text_geo" />
    
    <TextView
        android:id="@+id/user_text_address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Address"
        android:layout_below="@id/user_text_geo_space"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="addressToggle" />
    
    <TextView
        android:id="@+id/user_text_address_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/user_text_address_text"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical" />
    
</RelativeLayout>